{% extends "base.twig" %}
{% block content %}

    <div class="container">

        <form class="form-horizontal" action="../index.php" method="post">

            <!-- Nadpis -->
            <div class="form-group">
                <div class="col-sm-9">
                    <h3>New article</h3>
                </div>
            </div>

            <!-- Titulek -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="title">Title:</label>
                <div class="col-sm-7 col-md-8 col-lg-7">
                    <input type="text" class="form-control" name="title" id="title" placeholder="New article">
                </div>
            </div>

            <!-- PDF -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="password">Enclose PDF:</label>
                <div class="col-sm-7">
                    <div class="upload-btn-wrapper">
                        <button class="btn">Upload a file</button>
                        <input type="file" name="pdf" />
                    </div>
                </div>
            </div>

            <!-- EDITOR -->
            <div class="row">
                <div class="col-sm-offset-2 col-sm-7">
                    <textarea name="content" id="editor"></textarea>
                </div>
            </div>
            <!-- /EDITOR -->

            <input type="hidden" name="action" value="newarticle">

            <!-- Ulozeni -->
            <div class="form-group">
                <div class="col-xs-6 col-sm-offset-3 col-sm-3 col-md-offset-6 col-md-2 col-lg-offset-5 col-lg-2 ">
                    <input type="submit" name="save-draft" class="btn mybutton" value="Save draft">
                </div>
                <div class="col-xs-6 col col-sm-3 col-md-2 col-lg-2">
                    <input type="submit" name="submit" class="btn mybutton" value="Submit">
                </div>
            </div>

        </form>

    </div>
</div>

<script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .then( editor => {
            console.log( editor );
        } )
        .catch( error => {
            console.error( error );
        } );
</script>

{% endblock content %}