<div class="container">

    <div class="col-sm-offset-2 col-sm-7 col-md-8 col-lg-7">

        <h3><b>{{ post.title }}</b></h3>
        <p>Author: <b>{{ post.author.name | raw }}</b></p>
        <hr>

        <div class="well text">
            {{ post.text | raw }}

            <hr>

            {% if post.file is defined %}
                <a class="btn" href="../user-files/{{ post.users_id_user }}_{{ post.id_posts }}.pdf" target="_blank">View .pdf</a>
            {% endif %}

        </div>

    </div>
</div>