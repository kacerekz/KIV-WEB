{% include('header.twig') %}

<div class="container-fluid">
    {% include('navbar.twig') %}
</div>

<div class="container">
    <div class="row">

        <!-- Prihlaseni -->
        <div class="col-md-5">
            <form class="form-horizontal">

                <!-- Nadpis -->
                <div class="form-group">
                    <div class="col-sm-9">
                        <h3>Log in</h3>
                    </div>
                </div>

                <!-- Prihlasovaci jmeno -->
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-3 col-lg-2" for="username">Username:</label>
                    <div class="col-sm-7 col-md-6 col-lg-7">
                        <input type="text" class="form-control" id="username" placeholder="Username">
                    </div>
                </div>

                <!-- Heslo -->
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-3 col-lg-2" for="password">Password:</label>
                    <div class="col-sm-7 col-md-6 col-lg-7">
                        <input type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                </div>

                <!-- Ulozeni -->
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-7">
                        <div class="checkbox">
                            <label><input type="checkbox" id="save"> Remember me</label>
                        </div>
                    </div>
                </div>

                <!-- Odeslani -->
                <div class="form-group">
                    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-7 col-sm-2 col-md-offset-6 col-md-3 ">
                        <button type="submit" id="log" class="btn">Log in</button>
                    </div>
                </div>

            </form>
        </div>

        <!-- Registrace -->
        <div class="col-md-7 vdiv">
            <form class="form-horizontal">

                <!-- Nadpis -->
                <div class="form-group">
                    <div class="col-sm-10 col-md-offset-1 col-md-9">
                        <h3>Sign up</h3>
                    </div>
                </div>

                <!-- Jmeno -->
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-3" for="name-su">Full name:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="name-su" placeholder="Full name">
                    </div>
                </div>

                <!-- Prihlasovaci jmeno -->
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-3" for="username-su">Username:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="username" placeholder="Username">
                    </div>
                </div>

                <!-- Heslo -->
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-3" for="password-su">Password:</label>
                    <div class="col-sm-7">
                        <input type="password" class="form-control" id="password" placeholder="Password">
                    </div>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-3" for="email-su">E-mail:</label>
                    <div class="col-sm-7">
                        <input type="email" class="form-control" id="email-su" placeholder="yourname@example.com">
                    </div>
                </div>

                <!-- Odeslani -->
                <div class="form-group">
                    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-7 col-sm-2 col-md-offset-7 col-md-3 "> <!--col-xs-offset-9 col-xs-2-->
                        <button type="submit" id="su" class="btn">Sign up</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

{% include('footer.twig') %}