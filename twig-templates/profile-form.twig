{% include('header.twig') %}

<div class="container-fluid">
    {% include('navbar.twig') %}

    <div class="container">
        <div class="row">

            <!-- Zmena nastaveni -->
            <div class="col-md-8 col-lg-6">
                <form class="form-horizontal">

                    <!-- Nadpis -->
                    <div class="form-group">
                        <div class="col-sm-9">
                            <h3>Change your profile</h3>
                        </div>
                    </div>

                    <!-- Jmeno -->
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-5" for="name">Full name:</label>
                        <div class="col-sm-7 col-md-7">
                            <input type="text" class="form-control" id="name" placeholder="Full name">
                        </div>
                    </div>

                    <!-- Prihlasovaci jmeno -->
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-5" for="username">Username:</label>
                        <div class="col-sm-7 col-md-7">
                            <input type="text" class="form-control" id="username" placeholder="Username">
                        </div>
                    </div>

                    <!-- Stare heslo -->
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-5" for="old-password">Old password:</label>
                        <div class="col-sm-7 col-md-7">
                            <input type="password" class="form-control" id="old-password" placeholder="Old password">
                        </div>
                    </div>

                    <!-- Heslo -->
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-5" for="password">New password:</label>
                        <div class="col-sm-7 col-md-7">
                            <input type="password" class="form-control" id="password" placeholder="New password">
                        </div>
                    </div>

                    <!-- Heslo -->
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-5" for="password2">Check new password:</label>
                        <div class="col-sm-7 col-md-7">
                            <input type="password" class="form-control" id="password2" placeholder="New password">
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-5" for="email">E-mail:</label>
                        <div class="col-sm-7 col-md-7">
                            <input type="email" class="form-control" id="email" placeholder="yourname@example.com">
                        </div>
                    </div>

                    <!-- Odeslani -->
                    <div class="form-group">
                        <div class="col-xs-offset-1 col-xs-10 col-sm-offset-6 col-sm-4 col-md-offset-8 col-md-4">
                            <button type="submit" id="log" class="btn">Apply changes</button>
                        </div>
                    </div>

                </form>
            </div>

        </div>
    </div>

</div>
{% include('footer.twig') %}